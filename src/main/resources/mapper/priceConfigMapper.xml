<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.susd.domain.complex.PriceConfigRepository">
	<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！ -->
	<resultMap id="priceConfigMap"
		type="com.susd.domain.complex.PriceConfig">
		<id column="id" property="id" />
		<result column="tenant_id" property="tenantId" />
		<result column="province" property="addr.province" />
		<result column="city" property="addr.city" />
		<result column="standard_price" property="standardPrice" />
		<result column="lowest_price" property="lowestPrice" />
		<result column="maintain_id" property="maintainId" />
		<result column="add_time" property="addTime" />
	</resultMap>
	
	<resultMap id="priceConfigMaps"
		type="com.susd.domain.complex.PriceConfig">
		<id column="id" property="id" />
		<result column="tenant_id" property="tenantId" />
		<result column="express" property="express" />
		<result column="coefficient" property="coefficient" />
		<result column="province" property="addr.province" />
		<result column="city" property="addr.city" />
		<result column="standard_price" property="standardPrice" />
		<result column="lowest_price" property="lowestPrice" />
		<result column="add_fees" property="addFees" />
		<result column="maintain_id" property="maintainId" />
		<result column="add_time" property="addTime" />
		<result column="version" property="version" />
	</resultMap>
	
	<!-- useGeneratedKeys设置为"true"表明要MyBatis获取由数据库自动生成的主键； keyProperty="id"指定把获取到的主键值注入到PriceConfig的id属性 -->
	<insert id="add"
		parameterType="com.susd.domain.complex.PriceConfig"
		useGeneratedKeys="true" keyProperty="id">
		insert into price_config
		(tenant_id,express,coefficient,province,city,area,standard_price,lowest_price,add_fees,remark,maintain_id,add_time,version)
		values
		(#{tenantId},#{express},#{coefficient},#{addr.province},#{addr.city},#{addr.area},#{standardPrice},#{lowestPrice},#{addFees},#{remark},#{maintainId},#{addTime},#{version})
	</insert>
	<select id="findByKeyword" parameterType="String"
		resultMap="priceConfigMaps">

	select price_config.id,price_config.tenant_id,text express,coefficient,province,
	city,area,standard_price,lowest_price,remark,add_fees,
	maintain_id,price_config.add_time,price_config.version
	from price_config
	inner join dict on `value`=express and `key`='express'
	where price_config.tenant_id=#{tenantId}
		<if test="keyword != null and keyword != ''">
			<bind name="keyinfo" value="'%' + keyword + '%'" />
			and (express like #{keyinfo} or province like #{keyinfo})
		</if>
	</select>
	<!-- 查询单条记录 -->
	<select id="findPriceConfigById" parameterType="int"
		resultMap="priceConfigMap">
		select *
		 from price_config where id = #{priceConfigId}
	</select>

	<!-- 删除单条记录 -->
	<delete id="delete" parameterType="int">
		delete from price_config where id = #{priceConfigId}
	</delete>

	<update id="update"
		parameterType="com.susd.domain.complex.PriceConfig">
		update price_config set
		express=#{express},coefficient=#{coefficient},province=#{addr.province},
		city=#{addr.city},area=#{addr.area},add_fees=#{addFees},
		standard_price=#{standardPrice},lowest_price=#{lowestPrice},remark=#{remark},version=version+1
		where id=${id}
	</update>


	<select id="priceCount" resultType="com.susd.domain.complex.PriceSearchResult">
	
	select (@i:=@i+1) as seqNo,text express,if(${volume}*100*100*100/coefficient>${weight},${volume}*100*100*100/coefficient,${weight}) weight,
	if(if(${volume}*100*100*100/coefficient>${weight},${volume}*100*100*100/coefficient,${weight}) *standard_price>lowest_price,
	if(${volume}*100*100*100/coefficient>${weight},${volume}*100*100*100/coefficient,${weight}) *standard_price,lowest_price) price 
	from price_config 
	inner join dict on `value`=express and `key`='express' ,(select @i:=0) as it
	where tenant_id=#{tenantId} and province=#{province} 
	<if test="city != null and city != ''">
			<bind name="keyinfo" value="'%' + city + '%'" />
			and city like #{keyinfo}
		</if>
	order by price asc
	</select>
	
	<select id="findPrice" resultMap="priceConfigMap">
			<bind name="keyinfo" value="'%' + city + '%'" />
		select * from price_config where tenant_id=#{tenantId} and province=#{province} and city like #{keyinfo} and express=#{express}
	</select>

</mapper>